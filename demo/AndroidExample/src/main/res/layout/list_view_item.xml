<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_select"
    android:padding="20dp"
    >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical" >

        <com.study.android.view.RoundCornerImageView
            android:id="@+id/icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:contentDescription="@string/ex_str"
            android:src="@drawable/address_book"
            myview:radiu="360"
             />
        <!--<ImageView-->
            <!--android:id="@+id/icon"-->
            <!--android:layout_width="52dp"-->
            <!--android:layout_height="52dp"-->
            <!--android:contentDescription="@string/ex_str"-->
            <!--android:src="@drawable/address_book"-->
            <!--/>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout1"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
         >

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex_str"
            android:textSize="24sp"
			android:textColor="@color/black"
		/>

        <TextView
            android:id="@+id/txt_descript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex_str" 
            android:textSize="16sp"
            />

    </LinearLayout>

</RelativeLayout>